{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/api/v1/tours": {
      "post": {
        "summary": "Send a tour",
        "tags": [
          "Triggers"
        ],
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "params",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "user_id": {
                  "type": "integer"
                },
                "tour": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "latitude": {
                      "type": "number"
                    },
                    "longitude": {
                      "type": "number"
                    }
                  }
                }
              },
              "required": [
                "latitude",
                "longitude"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "tour created"
          },
          "422": {
            "description": "invalid request"
          },
          "404": {
            "description": "user not found"
          }
        }
      }
    },
    "/api/v1/users": {
      "post": {
        "summary": "SignUp a user",
        "tags": [
          "Users"
        ],
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "params",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "type": "object",
                  "properties": {
                    "first_name": {
                      "type": "string"
                    },
                    "last_name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    },
                    "passport_id": {
                      "type": "string"
                    },
                    "phone": {
                      "type": "string"
                    },
                    "dob": {
                      "type": "string"
                    }
                  }
                }
              },
              "required": [
                "email",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "user signed up"
          },
          "422": {
            "description": "invalid request"
          }
        }
      }
    },
    "/api/v1/users/sign_in": {
      "post": {
        "summary": "SignIn a user",
        "tags": [
          "Users"
        ],
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "params",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    }
                  }
                }
              },
              "required": [
                "email",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "user signed up"
          },
          "422": {
            "description": "invalid request"
          }
        }
      }
    },
    "/api/v1/users/{id}/quotes": {
      "get": {
        "summary": "Get quotes of a user",
        "tags": [
          "Users"
        ],
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "integer",
            "description": "Unique identifier",
            "required": true
          }
        ],
        "responses": {
          "201": {
            "description": "user signed up",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                }
              },
              "required": [
                "id"
              ]
            }
          },
          "422": {
            "description": "invalid request"
          }
        }
      }
    }
  }
}